<template name="WindowTitle">
    <head>
        <link type="text/rcss" href="../../rml.rcss" />
        <link type="text/rcss" href="../../BaseStyles.rcss" />
        <link type="text/rcss" href="WindowTitle.rcss" />
    </head>
    <body>
        <div id="window-title" data-class-hidden="len(TitleInfo.Text) == 0">
            <img data-attr-src="TitleInfo.Icon" class="title-icon" width="60dp" height="60dp" data-class-hidden="len(TitleInfo.Icon) == 0 || TitleInfo.IconItemId != 0"/>
            <ItemIdImg data-attr-itemid="TitleInfo.IconItemId" class="title-icon" data-class-hidden="TitleInfo.IconItemId == 0"/>
            <div class="title-text font-title label">
                {{TitleInfo.Text}}
            </div>
        </div>
    </body>
</template>
