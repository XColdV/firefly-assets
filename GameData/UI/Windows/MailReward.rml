<rml>
    <head>
        <title>MailReward</title>
        <link type="text/template" href="Base/BasePopup.rml" />
        <link type="text/rcss" href="Base/WindowTitle.rcss" />
        <link type="text/rcss" href="MailReward.rcss" />
    </head>
    <body template="BasePopup">
        <div data-model="MailRewardModel" id="mailreward-popup" class="font-content">
            <div class="font-contentnormal">
                <div class="top-panel">
                    <div id="window-title">
                        <div class="title-text font-title label">
							Reward Details
						</div>
                    </div>
					<div class="top-padding itemname-panel">
						<div class="itemIdIcon" data-style-decorator="'itemidimage('+MailRewardModel.ItemId+')'" />
						<div data-rml="ItemNameCount(MailRewardModel.ItemId, MailRewardModel.Count)"/>
					</div>
					<div class="top-padding font-contentnormal" data-rml="ItemDesc(MailRewardModel.ItemId)"/>
				</div>
				<div class="top-padding buttons-panel" >
					<div onclick="OnEvent(event, 'mailbox.OnBack')" class="button button-light-default-color">
						<span class="label">Back</span>
					</div>
				</div>
            </div>
        </div>
    </body>
</rml>