.window {
    min-height: 0;
    max-height: none;
    max-width: 75vw;
}

#mailreward-popup {
}

    #mailreward-popup .itemname-panel {
        display: flex;
        font-size: 28dp;
        align-items: center; 
        gap: 16dp; 
    }

    #mailreward-popup .itemIdIcon {
