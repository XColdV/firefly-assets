	<RenderRules>
		<AddClothingParticles>
			<StopIf>
				<IsZombified>true</IsZombified>
				<IsTrnsformed>true</IsTrnsformed>
				<IsWearing slot="SHIRT">ITEM_ID_TACTICAL_STEALTH_DEVICE</IsWearing>
			</StopIf>
			<ParticleSystemUpdate name="trail_spark_left_walk" onState="Action.Move|Action.FallStraight" />
			<ParticleSystemUpdate name="trail_spark_right_walk" onState="Action.Move|Action.FallStraight" />
		</AddClothingParticles>
		<RenderFrontpack>
			<ParticleSystemRender name="trail_spark_left_walk"/>
			<ParticleSystemRender name="trail_spark_right_walk"/>
		</RenderFrontpack>
		<RenderBackpack>
			<StopIf>
				<IsWearing slot="SHIRT">ITEM_ID_TACTICAL_STEALTH_DEVICE</IsWearing>
			</StopIf>
			<SpriteRender name="s_Wing" offset="0,-16" blend="PREMULTIPLIED_ALPHA"/>
		</RenderBackpack>
	</RenderRules>
</ItemRenderer>
