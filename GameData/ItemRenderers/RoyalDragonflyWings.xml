<?xml version="1.0"?>
<ItemRenderer>
	<Data>
		<Sprite name="s_Wing" fileName="game/particles_large16.rttex" textureSize="64" frame="0,2" />
		<Sprite name="s_spark" fileName="game/particles12.rttex" textureSize="32"/>
		<StateMachines>
			<StateMachine name="Action">
				<States>
					<State name="Idle" />
					<State name="Move" />
					<State name="JumpStraight" />
					<State name="FallStraight" />
				</States>
				<Transitions>
					<Transition to="Idle" from="FallStraight|Move">
						<Condition>
							<IsVariableFloat name="speed.length" operator="Less" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="Move" from="Idle|FallStraight">
						<Condition type="and">
							<IsVariableFloat name="speed.x" operator="Greater" abs="true">0.1</IsVariableFloat>
							<IsVariableFloat name="speed.y" operator="Less" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="JumpStraight" from="Idle|FallStraight|Move">
						<Condition>
							<IsVariableFloat name="speed.y" operator="Less">-0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="FallStraight" from="JumpStraight|Idle|Move">
						<Condition>
							<IsVariableFloat name="speed.y" operator="Greater">0.1</IsVariableFloat>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<Animations>
			<SpriteAnimation name="s_spark_frames" sprite="s_spark">
				<Frame>0,11</Frame>
				<Frame>1,11</Frame>
				<Frame>2,11</Frame>				
				<Frame>3,11</Frame>
				<Frame>4,11</Frame>
				<Frame>5,11</Frame>
				<Frame>6,11</Frame>
				<Frame>7,11</Frame>
				<Frame>8,11</Frame>
				<Frame>9,11</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="s_Wing_idle" sprite="s_Wing" animTime="50" isLoop="true" playOnState="Action.Idle" >
				<Frame>0,2</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="s_Wing_walk" sprite="s_Wing" animTime="200" isLoop="true" playOnState="Action.Move" >
				<Frame>1,2</Frame>
				<Frame>2,2</Frame>
				<Frame>1,2</Frame>
				<Frame>4,2</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="s_Wing_jump" sprite="s_Wing" animTime="100" isLoop="true" playOnState="Action.JumpStraight">
				<Frame>5,2</Frame>
				<Frame>6,2</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="s_Wing_fall" sprite="s_Wing" animTime="100" isLoop="true" playOnState="Action.FallStraight">
				<Frame>7,2</Frame>
				<Frame>8,2</Frame>
			</SpriteAnimation>
		</Animations>

		<RenderOptions>
			<Default>
				<Set name="HideParticlesOnTransform">true</Set>
			</Default>
		</RenderOptions>
		<ParticleSystems>
			<ParticleSystem name="trail_spark_left" updateStage="AddClothingParticles" updateState="Action.Idle">
				<Emitter>
					<Random name="offset" min="-32, -20" max="-11.5, -10" />
					<Set name="offsetFacing">true</Set>
					<Set name="lifeTime">0.25</Set>
					<Set name="infParticles">true</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">1</Set>
					<Set name="emissionInterval">0.4</Set>
				</Emitter>
				<Particle  usePlayerFacing="true" randomSpriteFrame="true">
					<Set name="sprite">s_spark</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="lifeTime">1</Set>
					<Curve name="initialAlpha">
						<KeyFrame>0, 1</KeyFrame>
						<KeyFrame>1, 0</KeyFrame>
					</Curve>
					<Curve name="initialScale">
						<KeyFrame>0, 0.3,0.3</KeyFrame>
						<KeyFrame>1, 0.25,0.25</KeyFrame>
					</Curve>
					<Random name="initialRotationRate" min="5" max="15" />

