<?xml version="1.0"?>
<ItemRenderer>
	<Data>
		<Sprite name="s_Wing" fileName="game/particles_large15.rttex" textureSize="64" frame="8,9" />
		<Sprite name="s_strap" fileName="game/player_cosmetics3.rttex" textureSize="32" frame="27,28"/>
		<Sprite name="double_jump_particle_Sprite" fileName="game/particles10.rttex" textureSize="32"/>
		<StateMachines>
			<StateMachine name="Mobility">
				<States>
					<State name="OnGround"/>
					<State name="InAir"/>
				</States>
				<Transitions>
					<Transition to="OnGround" from="InAir">
						<Condition>
							<IsVariableBool name="onGround">true</IsVariableBool>
						</Condition>
					</Transition>
					<Transition to="InAir" from="OnGround">
						<Condition>
							<IsVariableBool name="onGround">false</IsVariableBool>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
			<StateMachine name="Action">
				<States>
					<State name="Idle" />
					<State name="JumpStraight" />
					<State name="FallStraight" />
				</States>
				<Transitions>
					<Transition to="Idle" from="FallStraight">
						<Condition>
							<IsVariableFloat name="speed.y" operator="Less" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="JumpStraight" from="Idle|FallStraight">
						<Condition>
							<IsVariableFloat name="speed.y" operator="Less">-0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="FallStraight" from="JumpStraight|Idle">
						<Condition>
							<IsVariableFloat name="speed.y" operator="Greater">0.1</IsVariableFloat>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<ParticleSystems>
			<ParticleSystem name="double_jump_particle">
				<Emitter>
					<Set name="offset">0, 0</Set>
					<Set name="lifeTime">0.75</Set>
					<Set name="particlesPerEmission">8</Set>
					<Set name="particlesToEmit">4</Set>
					<Set name="checkParticleNumToEmit">true</Set>
					<Set name="infParticles">true</Set>
					<Set name="delayTimer">0</Set>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">double_jump_particle_Sprite</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="isBackgroundParticle">true</Set>
					<Set name="initalRGB">1, 1, 1</Set>
					<Set name="relativeToEmitter">true</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="lifeTime">0.75</Set>
					<Random name="initialScale" min="0.5" max="1"/>
					<RandomRadial name="initialVelocity" angleRange="0,360" radiusRange="200,250"/>
				</Particle>
			</ParticleSystem>
		</ParticleSystems>
		<Animations>

			<SpriteAnimation name="double_jump_particle_Sprite_frames"  autoPlay="false" isLoop="false" sprite="double_jump_particle_Sprite"  animTime="100">
				<Frame>6,25</Frame>
				<Frame>6,23</Frame>
				<Frame>6,26</Frame>
				<Frame>6,27</Frame>
				<Frame>6,24</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="s_Wing_idle" sprite="s_Wing" animTime="100" isLoop="true" playOnState="Action.Idle">
				<Frame>8,9</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="s_Wing_jump" sprite="s_Wing" animTime="200" isLoop="true" playOnState="Action.JumpStraight|Action.FallStraight">
				<Frame>9,9</Frame>
				<Frame>10,9</Frame>
				<Frame>11,9</Frame>
				<Frame>12,9</Frame>
			</SpriteAnimation>
		</Animations>

		<RenderOptions>
			<Default>
				<Set name="ShouldHover">true</Set>
			</Default>
		</RenderOptions>
	</Data>
	<RenderRules>
		<Update>
			<StopIf>
				<IsZombified>true</IsZombified>
			</StopIf>
			<AvatarTransform class="FootPosition" onState="Mobility.OnGround">
				<Set name="foot1dy">0</Set>
				<Set name="foot2dy">0</Set>
				<Set name="foot1y">0</Set>
				<Set name="foot2y">0</Set>
			</AvatarTransform>
		</Update>
		<RenderFrontpack>
			<SpriteRender name="s_strap" offset="0,0" alignment="DOWN_CENTER" blend="PREMULTIPLIED_ALPHA"/>
		</RenderFrontpack>
		<RenderBackpack>
			<StopIf>
				<IsWearing slot="SHIRT">ITEM_ID_TACTICAL_STEALTH_DEVICE</IsWearing>
			</StopIf>
			<SpriteRender name="s_Wing" offset="0,-13.6" blend="PREMULTIPLIED_ALPHA"/>
		</RenderBackpack>
		<AddClothingParticles>
			<ParticleSystemUpdate name="double_jump_particle" onAction="JUMP"/>
		</AddClothingParticles>
		<SwitchOffClothingParticles>
			<ParticleSystemOff name="double_jump_particle"/>
		</SwitchOffClothingParticles>
	</RenderRules>
</ItemRenderer>