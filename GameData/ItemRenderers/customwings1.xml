<?xml version="1.0" encoding="utf-8"?>
<ItemRenderer>
	<Data>
		<StateMachines>
			<StateMachine name="playerState">
				<States>
					<State name="Idle"/>
					<State name="Move"/>
					<State name="Fall"/>
					<State name="Jump"/>
					<State name="DoubleJump"/>
					<State name="SpiritGuide"/>
				</States>
				<Transitions>
					<Transition from="SpiritGuide|Jump|Fall|Move|DoubleJump" to="Idle" >
						<Condition>
							<IsVariableFloat name="speed.length" operator="Less" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition from="SpiritGuide|Jump|Fall|Idle|DoubleJump" to="Move">
						<Condition type="and">
							<IsWearing operatorType="NotEqual" slot="CHESTITEM">ITEM_ID_HAUNTED</IsWearing>
							<IsAction>WALK</IsAction>
						</Condition>
					</Transition>				
					<Transition from="Move|Jump|Fall|Idle|DoubleJump" to="SpiritGuide">
						<Condition type="and">
							<IsWearing slot="CHESTITEM">ITEM_ID_HAUNTED</IsWearing>
							<IsVariableFloat name="speed.length" operator="Greater" abs="true">0</IsVariableFloat>
							<IsAction operatorType="NotEqual">FALL</IsAction>
						</Condition>
					</Transition>
					<Transition from="SpiritGuide|Fall|Move|Idle" to="Jump">
						<Condition type="and">
							<IsWearing operatorType="NotEqual" slot="CHESTITEM">ITEM_ID_HAUNTED</IsWearing>
							<IsAction>JUMP</IsAction>
						</Condition>
					</Transition>
					<Transition from="Jump|Fall" to="DoubleJump">
						<Condition>
							<IsAction>JUMPDOUBLE</IsAction>
						</Condition>
					</Transition>
					<Transition from="DoubleJump|SpiritGuide|Jump|Idle|Move" to="Fall">
						<Condition type="and">
							<IsVariableFloat name="speed.y" operator="Greater" abs="false">0.01</IsVariableFloat>
							<IsAction>FALL</IsAction>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>

		<Sprite name="right_wings_sprite" fileName="game/jeruk.rttex" textureSize="64"/>
		<Sprite name="left_wings_sprite" fileName="game/jeruk.rttex" textureSize="64"/>
		<Sprite name="s_Sparkle" fileName="game/particles2.rttex" textureSize="32" frame="5,11" />
		<Sprite name="double_jump_particle_Sprite" fileName="game/particles2.rttex" textureSize="32"/>

		<Animations>
			<SpriteAnimation name="right_wings_Idle" playOnState="playerState.Idle|playerState.SpiritGuide|playerState.Move" sprite="right_wings_sprite" isLoop="true" animTime="100">
				<Frame>0,0</Frame>
			</SpriteAnimation>
			
			<SpriteAnimation name="right_wings_Fall" playOnState="playerState.Fall|playerState.DoubleJump" sprite="right_wings_sprite" isLoop="true" animTime="100">
				<Frame>2,0</Frame>
			</SpriteAnimation>		
		
			<SpriteAnimation name="right_wings_Jump" playOnState="playerState.Jump" sprite="right_wings_sprite" isLoop="true" animTime="200">
				<Frame>1,0</Frame>
				<Frame>2,0</Frame>
			</SpriteAnimation>

			<SpriteAnimation name="left_wings_Idle" playOnState="playerState.Idle|playerState.SpiritGuide|playerState.Move" sprite="left_wings_sprite" isLoop="true" animTime="100">
				<Frame>0,0</Frame>
			</SpriteAnimation>
			
			<SpriteAnimation name="left_wings_Fall" playOnState="playerState.Fall|playerState.DoubleJump" sprite="left_wings_sprite" isLoop="true" animTime="100">
				<Frame>2,0</Frame>
			</SpriteAnimation>		
		
			<SpriteAnimation name="left_wings_Jump" playOnState="playerState.Jump" sprite="left_wings_sprite" isLoop="true" animTime="200">
				<Frame>1,0</Frame>
				<Frame>2,0</Frame>
			</SpriteAnimation>
			
			<SpriteAnimation name="double_jump_particle_Sprite_frames"  autoPlay="false" isLoop="false" sprite="double_jump_particle_Sprite"  animTime="100">
				<Frame>3,11</Frame>
				<Frame>4,11</Frame>
				<Frame>5,11</Frame>
			</SpriteAnimation>

		</Animations>
		
		<ParticleSystems>
			<ParticleSystem name="double_jump_particle">
				<Emitter>
					<Set name="offset">0, -24</Set>
					<Set name="lifeTime">0.75</Set>
					<Set name="particlesPerEmission">8</Set>
					<Set name="particlesToEmit">8</Set>
					<Set name="checkParticleNumToEmit">true</Set>
					<Set name="infParticles">true</Set>
					<Set name="delayTimer">0</Set>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">double_jump_particle_Sprite</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="isBackgroundParticle">true</Set>
					<Set name="relativeToEmitter">true</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="interpolateAlpha">true</Set>
					<Set name="lifeTime">0.75</Set>
					<Random name="initialScale" min="0.5, 0.5" max="1, 1"/>
					<RandomRadial name="initialVelocity" angleRange="0,360" radiusRange="200,250"/>
				</Particle>
			</ParticleSystem>
