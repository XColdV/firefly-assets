		<RenderOptions>
			<Default>
				<Set name="PlayDefaultPunchAudio">true</Set>
			</Default>
		</RenderOptions>
	</Data>
	<RenderRules>
	<OnDrawCustomOutline>
      <AvatarTransform class="Scale">
        <Set name="targetScale">getCurrent</Set>
      </AvatarTransform>
      <AvatarTransform class="RenderData">
        <Set name="saturation">3</Set>
        <Set name="brightness">1</Set>
        <Set name="contrast">0.1</Set>
      </AvatarTransform>
      <AvatarOutline duration="1500" startScale="1,1" endScale="1.1,1.1">
        <Colours>
          <Colour>77,55,107,255</Colour>
        </Colours>
      </AvatarOutline>
      <AvatarTransform class="RenderData">
        <Set name="saturation">1</Set>
        <Set name="brightness">1</Set>
        <Set name="contrast">0.1</Set>
      </AvatarTransform>
      <AvatarTransform class="Scale">
        <Set name="targetScale">reset</Set>
      </AvatarTransform>
    </OnDrawCustomOutline>
		<RenderBackpack>
			<SpriteRender name="left_wings_sprite" offset="-36,-16"/>
			<SpriteRender name="right_wings_sprite" offset="36,-16" flip="1,0"/>
			<StopIf>
				<IsRenderMod>RENDER_MOD_MINI_YOU</IsRenderMod>
			</StopIf>
		</RenderBackpack>
		<OnPunchUpdate>
			<AvatarTransform class="Face">
				<Set name="face">MAD</Set>
			</AvatarTransform>
		</OnPunchUpdate>
		<AddClothingParticles>
			<ParticleSystemUpdate name="double_jump_particle" onAction="JUMPDOUBLE"/>
			<AvatarSilhouetteRender color="77,55,107,255" emissionInterval="0.25" onState="playerState.Move|playerState.Jump|playerState.DoubleJump|playerState.Fall"/>
		</AddClothingParticles>
		<SwitchOffClothingParticles>
			<ParticleSystemOff name="double_jump_particle"/>
		</SwitchOffClothingParticles>
	</RenderRules>
</ItemRenderer>