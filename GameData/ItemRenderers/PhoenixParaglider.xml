<?xml version="1.0"?>
<ItemRenderer>
	<Data>
		<Sprite name="s_paraglider" fileName="game/particles_large16.rttex" textureSize="64,64" frame="8,0"/>
		<Sprite name="s_strap" fileName="game/player_cosmetics3.rttex" textureSize="32,32" frame="26,29"/>
		<Animations>
			<SpriteAnimation name="a_paraglider1" sprite="s_paraglider" isLoop="false" animTime="200" playOnState="Motion.Takeoff">
				<Frame>9,0</Frame>
				<Frame>10,0</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="a_paraglider2" sprite="s_paraglider" isLoop="false" animTime="100" playOnState="Motion.Ground">
				<Frame>8,0</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="a_paraglider3" sprite="s_paraglider" isLoop="true" animTime="400" playOnState="Motion.Air">
				<Frame>11,0</Frame>
				<Frame>12,0</Frame>
				<Frame>13,0</Frame>
				<Frame>14,0</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="a_paraglider4" sprite="s_paraglider" isLoop="false" animTime="200" playOnState="Motion.Landing">
				<Frame>10,0</Frame>
				<Frame>9,0</Frame>
			</SpriteAnimation>
		</Animations>
		<StateMachines>
			<StateMachine name="Punch">
				<States>
					<State name="True"/>
					<State name="False"/>
				</States>
				<Transitions>
					<Transition from="False" to="True">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>false</IsZombified>
						</Condition>
					</Transition>
					<Transition from="True" to="False">
						<Condition>
							<IsAction operatorType="NotEqual">PUNCH</IsAction>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
			<StateMachine name="Motion">
				<States>
					<State name="Ground" />
					<State name="Takeoff"  ExitTime="0.2"/>
					<State name="Air"/>
					<State name="Landing"  ExitTime="0.2"/>
				</States>
				<Transitions>
					<Transition to="Landing" from="Air">
						<Condition>
							<IsVariableBool name="onGround">true</IsVariableBool>
						</Condition>
					</Transition>
					<Transition to="Ground" from="Takeoff|Air|Landing">
						<Condition>
							<IsVariableBool name="onGround">true</IsVariableBool>
						</Condition>
					</Transition>
					<Transition to="Takeoff" from="Ground|Landing">
						<Condition type="or">
							<IsAction>JUMP</IsAction>
							<IsAction>FALL</IsAction>
						</Condition>
					</Transition>
					<Transition to="Air" from="Takeoff">
						<Condition>
							<IsVariableBool name="onGround">false</IsVariableBool>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<RenderOptions>
			<Default>
				<Set name="IgnorePunchTypeCheck">true</Set>
				<Set name="RenderFrontArmInfected">true</Set>
				<Set name="RenderBackArmInfected">true</Set>
			</Default>
		</RenderOptions>
	</Data>
	<RenderRules>
		<Update>
			<Group onState="Punch.False">
				<AvatarTransform class="ArmAngle" onState="Motion.Takeoff">
				  <Set name="armName">arm1Angle</Set>
				  <Set name="animTime">200</Set>
				  <Set name="Curve">
					<KeyFrame>0, 0</KeyFrame>
					<KeyFrame>1, -145</KeyFrame>
				  </Set>
				</AvatarTransform>
				<AvatarTransform class="ArmAngle" onState="Motion.Air">
				  <Set name="armName">arm1Angle</Set>
				  <Set name="armAngle">-145</Set>
				</AvatarTransform>
			</Group>
			<AvatarTransform class="ArmAngle" onState="Motion.Takeoff">
			  <Set name="armName">arm2Angle</Set>
			  <Set name="animTime">200</Set>
			  <Set name="Curve">
				<KeyFrame>0, 0</KeyFrame>
				<KeyFrame>1, 145</KeyFrame>
			  </Set>
			</AvatarTransform>
			<AvatarTransform class="ArmAngle" onState="Motion.Air">
			  <Set name="armName">arm2Angle</Set>
			  <Set name="armAngle">145</Set>
			</AvatarTransform>
		</Update>
		<RenderFrontArm>
			<SpriteRender name="s_strap" offset="0,-16" useFixedRotation="true" fixedRotation="0"/>
		</RenderFrontArm>
		<RenderBackArm value="playerCenter">
			<StopIf type="or">
				<IsSleepingOnaBed>true</IsSleepingOnaBed>
				<IsWearing slot="SHIRT">ITEM_ID_TACTICAL_STEALTH_DEVICE</IsWearing>
				<IsWearing slot="SHOES">ITEM_ID_STAR_FIGHTER_REBEL_RAIDER</IsWearing>
				<IsWearing slot="SHOES">ITEM_ID_STAR_FIGHTER_IMPERIAL_ENFORCER</IsWearing>
			</StopIf>
			<SpriteRender name="s_paraglider" offset="1,-32" useFixedRotation="true" fixedRotation="0"/>
		</RenderBackArm>
	</RenderRules>
</ItemRenderer>
