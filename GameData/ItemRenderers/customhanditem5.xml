<?xml version="1.0" encoding="utf-8"?>
<ItemRenderer>
	<Data>
		<StateMachines>
			<StateMachine name="playerState">
				<States>
					<State name="Idle"/>
					<State name="Punch"/>
					<State name="ZombiePunch"/>
				</States>
				<Transitions>
					<Transition from="ZombiePunch|Punch" to="Idle" >
						<Condition>
							<IsAction operatorType="NotEqual">PUNCH</IsAction>
						</Condition>
					</Transition>
					<Transition from="ZombiePunch|Idle" to="Punch">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>false</IsZombified>
						</Condition>
					</Transition>
					<Transition from="Idle|Punch" to="ZombiePunch">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>true</IsZombified>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>

		<Sprite name="sword_sprite" fileName="game/firefly_longhand.rttex" textureSize="64,32" frame="3,1"/>
		<Sprite name="sword_slash_Sprite" fileName="game/particles2.rttex" textureSize="32" frame="8,1"/>
		<Sprite name="hit_Sprite" fileName="game/particles4.rttex" textureSize="32" frame="3,15"/>
		<Sprite name="spark_sprite" fileName="game/particles.rttex" textureSize="32" frame="13,2"/>
		<Sprite name="customskin" fileName="game/player_head_skiny.rttex" textureSize="32" frame="0,0"/>

		<Animations>
			<SpriteAnimation name="sword_hit_frames" autoPlay="false" sprite="hit_Sprite">
				<Frame>3,15</Frame>
				<Frame>4,15</Frame>
				<Frame>5,15</Frame>
			</SpriteAnimation>
		</Animations>

		<ParticleSystems>
			<ParticleSystem name="slash_particle_1" updateStage="OnPunchStart">
				<Emitter onPunchCount="odd">
					<Set name="offset">0,-18</Set>
					<Set name="emissionInterval">0.25</Set>
					<Set name="lifeTime">0.25</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">1</Set>
				</Emitter>
				<Particle>
					<Set name="sprite">sword_slash_Sprite</Set>
					<Set name="blendingMode">ADDITIVE</Set>
					<Set name="lifeTime">0.4</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="interpolateAlpha">false</Set>
					<Set name="initialAlpha">1</Set>
					<Set name="finalAlpha">1</Set>
					<Set name="interpolateVelocity">true</Set>
					<Set name="initialScale">1.25,1.25</Set>
					<VectorTo name="initialVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
					<VectorTo name="finalVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="slash_particle_2" updateStage="OnPunchStart">
				<Emitter onPunchCount="even">
					<Set name="offset">0,-18</Set>
					<Set name="emissionInterval">0.25</Set>
					<Set name="lifeTime">0.25</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">1</Set>
				</Emitter>
				<Particle>
					<Set name="sprite">sword_slash_Sprite</Set>
					<Set name="blendingMode">ADDITIVE</Set>
					<Set name="lifeTime">0.4</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="interpolateAlpha">false</Set>
					<Set name="initialAlpha">1</Set>
					<Set name="finalAlpha">1</Set>
					<Set name="interpolateVelocity">true</Set>
					<Set name="initialScale">1.25,1.25</Set>
					<VectorTo name="initialVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
					<VectorTo name="finalVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="hit_particle" updateStage="OnDamagedTile">
				<Emitter>
					<Set name="offset">0,0</Set>
					<Set name="lifeTime">0</Set>
					<Random name="particlesPerEmission" min="6" max="8"/>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">hit_Sprite</Set>
					<Set name="blendingMode">ADDITIVE</Set>
					<Set name="isBackgroundParticle">false</Set>
					<Set name="lifeTime">0.6</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="finalRotationRate">5</Set>
					<Set name="initialAlpha">1</Set>
					<Set name="finalAlpha">0</Set>
					<Set name="interpolateAlpha">true</Set>
					<Set name="interpolateScale">true</Set>
					<Set name="initialScale">1.5,1.5</Set>
					<Random name="finalScale" min="0.2, 0.2" max="1.5, 1.5"/>
					<Set name="interpolateAngle">true</Set>
					<Random name="initialAngle" min="-360" max="360"/>
					<Random name="finalAngle" min="-360" max="360"/>
					<RandomRadial name="initialVelocity" angleRange="0,360" radiusRange="50,80"/>
					<Random name="posOffset" min="0, 0" max="16,16"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="handParticle" updateStage="AddClothingParticles" renderStage="RenderHandItem">
				<Emitter attachment="handspotRoot">
					<Random name="offset" min="3,7" max="28,7"/>
					<Random name="emissionInterval" min="0.07" max="0.14"/>
					<Set name="infParticles">true</Set>
					<Set name="infLifeTime">true</Set>
					<Set name="particlesPerEmission">3</Set>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">spark_sprite</Set>
					<Random name="offset" min="-4, -2" max="4, 2"/>
					<Set name="blendingMode">ADDITIVE</Set>
                    <Set name="inSpecificOrder">true</Set>
					<Curve name="initialAlpha">
						<KeyFrame>0, 0.8</KeyFrame>
						<KeyFrame>1, 0</KeyFrame>
					</Curve>
					<Random name="initialScale" min="0.35" max="0.75"/>
					<Set name="lifeTime">1</Set>
					<Random name="initialVelocity" min="0,-30" max="0, -20"/>
				</Particle>
			</ParticleSystem>
		</ParticleSystems>
		
		<RenderOptions>
			<Default>
				<Set name="DefaultRenderMannequinHandItem">false</Set>
				<Set name="HideParticlesOnTransform">false</Set>
				<Set name="IgnoreDefaultDamagedTileEffect">true</Set>
				<Set name="IgnoreDefaultDestroyedTileEffect">true</Set>
				<Set name="PunchSoundOverride">HAND</Set>
				<Set name="Head.Sprite">customskin</Set>
				<Set name="RenderFrontArmInfected">true</Set>
				<Set name="RenderBackArmInfected">true</Set>
			</Default>
		</RenderOptions>
	</Data>

	<RenderRules>
		<RenderHandItem value="1.23,7.3">
			<SpriteRender name="sword_sprite" blend="PREMULTIPLIED_ALPHA" rotateOffset="true"/>
		</RenderHandItem>
		<RenderBackHandItem>
			<StopIf type="and">
				<IsZombified>true</IsZombified>
				<IsAction>PUNCH</IsAction>
			</StopIf>
			<SpriteRender name="sword_sprite" offset="-3, 4" rotationPoint="0,1" alignment="CENTER" rotateOffset="true"  blend="PREMULTIPLIED_ALPHA"/>
		</RenderBackHandItem>
		<OnPunchUpdate>
			<AvatarTransform class="Face">
				<Set name="face">MAD</Set>
			</AvatarTransform>
			<AvatarTransform class="ArmAngle">
				<Set name="armName">arm1Angle</Set>
				<Set name="armAngle">1080</Set>
				<Set name="isAdditive">true</Set>
			</AvatarTransform>
			<AvatarTransform class="ArmAngle">
				<Set name="armName">arm2Angle</Set>
				<Set name="armAngle">880</Set>
				<Set name="isAdditive">true</Set>
			</AvatarTransform>
		</OnPunchUpdate>
	</RenderRules>
</ItemRenderer>