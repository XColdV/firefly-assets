<?xml version="1.0" encoding="utf-8"?>
<ItemRenderer>
	<Data>
		<StateMachines>
			<StateMachine name="playerState">
				<States>
					<State name="Idle"/>
					<State name="Punch"/>
					<State name="ZombiePunch"/>
				</States>
				<Transitions>
					<Transition from="ZombiePunch|Punch" to="Idle" >
						<Condition>
							<IsAction operatorType="NotEqual">PUNCH</IsAction>
						</Condition>
					</Transition>
					<Transition from="ZombiePunch|Idle" to="Punch">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>false</IsZombified>
						</Condition>
					</Transition>
					<Transition from="Idle|Punch" to="ZombiePunch">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>true</IsZombified>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>

		<Sprite name="sword_sprite" fileName="game/firefly_longhand.rttex" textureSize="64,32" frame="5,3"/>
		<Sprite name="sword_sprite_idle" fileName="game/firefly_particles_large.rttex" textureSize="64" frame="0,0"/>
		<Sprite name="sword_slash_Sprite" fileName="game/firefly_particle.rttex" textureSize="32" frame="3,0"/>
		<Sprite name="hit_Sprite" fileName="game/firefly_particle.rttex" textureSize="32" frame="3,1"/>

		<Animations>
			<SpriteCurveAnimation name="sword_rotation_anim" isLoop="true" playOnState="playerState.Punch"  useFacing="RIGHT" sprite="sword_sprite" animTime="500">
				<frame>5,3</frame>
				<frame>6,3</frame>
			</SpriteCurveAnimation>
			<SpriteCurveAnimation name="sword_rotation_anim_left" isLoop="true" playOnState="playerState.Punch"  useFacing="LEFT" sprite="sword_sprite" animTime="500">
				<frame>5,3</frame>
				<frame>6,3</frame>
			</SpriteCurveAnimation>
			<SpriteCurveAnimation name="sword_idle_anim" isLoop="true" playOnState="playerState.Idle|playerState.ZombiePunch" useFacing="RIGHT" sprite="sword_sprite_idle" animTime="100">
				<Curve name="rotation">
					<KeyFrame>0, 90</KeyFrame>
					<KeyFrame>0, 90</KeyFrame>
				</Curve>
			</SpriteCurveAnimation>
			<SpriteCurveAnimation name="sword_idle_anim_left" isLoop="true" playOnState="playerState.Idle|playerState.ZombiePunch" useFacing="LEFT" sprite="sword_sprite_idle" animTime="100">
				<Curve name="rotation">
					<KeyFrame>0, -90</KeyFrame>
					<KeyFrame>0, -90</KeyFrame>
				</Curve>
			</SpriteCurveAnimation>
			<SpriteAnimation name="punch_anim" autoPlay="false" sprite="sword_slash_Sprite" playOnState="playerState.Punch" animTime="50">
				<Frame>3,0</Frame>
			</SpriteAnimation>
		</Animations>

		<ParticleSystems>
			<ParticleSystem name="slash_particle">
				<Emitter>
					<Set name="offset">0,-16</Set>
					<Set name="infLifeTime">true</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">1</Set>
				</Emitter>
				<Particle>
					<Set name="sprite">sword_slash_Sprite</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="lifeTime">0.4</Set>
					<Set name="interpolateScale">true</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="initialScale">0.3,0.3</Set>
					<Set name="finalScale">2,2.5</Set>
					<Set name="interpolateVelocity">true</Set>
					<VectorTo name="initialVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
					<VectorTo name="finalVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="hit_particle">
				<Emitter>
					<Set name="offset">0,0</Set>
					<Set name="lifeTime">0</Set>
					<Random name="particlesPerEmission" min="6" max="8"/>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">hit_Sprite</Set>
					<Set name="blendingMode">ADDITIVE</Set>
					<Set name="isBackgroundParticle">false</Set>
					<Set name="lifeTime">0.6</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="finalRotationRate">5</Set>
					<Set name="initialAlpha">1</Set>
					<Set name="finalAlpha">0</Set>
					<Set name="interpolateAlpha">true</Set>
					<Set name="interpolateScale">true</Set>
					<Set name="initialScale">1,1</Set>
					<Random name="finalScale" min="0.2, 0.2" max="0.5, 0.5"/>
					<Set name="interpolateAngle">true</Set>
					<Random name="initialAngle" min="-360" max="360"/>
					<Random name="finalAngle" min="-360" max="360"/>
					<RandomRadial name="initialVelocity" angleRange="0,360" radiusRange="50,80"/>
					<Random name="posOffset" min="0, 0" max="16,16"/>
				</Particle>
			</ParticleSystem>
		</ParticleSystems>
		
		<RenderOptions>
			<Default>
				<Set name="DefaultRenderMannequinHandItem">false</Set>
				<Set name="HideParticlesOnTransform">false</Set>
				<Set name="IgnoreDefaultDamagedTileEffect">true</Set>
				<Set name="IgnoreDefaultDestroyedTileEffect">true</Set>
				<Set name="PunchSoundOverride">HAND</Set>
				<Set name="RenderFrontArmInfected">true</Set>
				<Set name="RenderBackArmInfected">true</Set>
			</Default>
		</RenderOptions>
	</Data>

	<RenderRules>
		<RenderHandItem value="1.23,7.3">
			<SpriteRender name="sword_sprite" blend="PREMULTIPLIED_ALPHA" rotateOffset="true" onState="playerState.Punch" />
		</RenderHandItem>
		<OnPunchUpdate>
			<AvatarTransform class="Face">
				<Set name="face">MAD</Set>
			</AvatarTransform>
			<AvatarTransform class="ArmAngle">
				<Set name="armName">arm2Angle</Set>
				<Set name="armAngle">1200</Set>
				<Set name="isAdditive">true</Set>
				<Set name="pointTowardsPunchTarget">false</Set>
			</AvatarTransform>
		</OnPunchUpdate>
		<RenderBackArm value="playerCenter">
			<StopIf type="or">
				<IsSleepingOnaBed>true</IsSleepingOnaBed>
				<IsWearing slot="SHIRT">ITEM_ID_TACTICAL_STEALTH_DEVICE</IsWearing>
				<IsWearing slot="SHOES">ITEM_ID_STAR_FIGHTER_REBEL_RAIDER</IsWearing>
				<IsWearing slot="SHOES">ITEM_ID_STAR_FIGHTER_IMPERIAL_ENFORCER</IsWearing>
			</StopIf>
			<SpriteRender name="sword_sprite_idle" offset="0, -30" onState="playerState.Idle|playerState.ZombiePunch" useFixedRotation="true" fixedRotation="0"/>
		</RenderBackArm>
		<OnPunchStart>
			<ParticleSystemUpdate name="slash_particle"/>
		</OnPunchStart>
		<OnDamagedTile>
			<ParticleSystemUpdate name="hit_particle"/>
		</OnDamagedTile>
		<SwitchOffClothingParticles>
			<ParticleSystemOff name="slash_particle"/>
			<ParticleSystemOff name="hit_particle"/>
		</SwitchOffClothingParticles>
	</RenderRules>
</ItemRenderer>