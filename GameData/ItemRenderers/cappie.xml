			</StopIf>
			<SpriteRender name="samurai_idle" offset="0,-10043" drawShadow="true" onState="Motion.Idle" scale="0.2,0.2"/>
			<SpriteRender name="samurai_punch" offset="0,-10043" drawShadow="true" onState="Motion.Punch" scale="0.2,0.2"/>
			<SpriteRender name="samurai_walk" offset="0,-10043" drawShadow="true" onState="Motion.Move" scale="0.2,0.2"/>
			<SpriteRender name="samurai_jump" offset="0,-10043" drawShadow="true" onState="Motion.Jump" scale="0.2,0.2"/>
			<SpriteRender name="samurai_fall" offset="0,-10043" drawShadow="true" onState="Motion.Fall" scale="0.2,0.2"/>

		</RenderInFront>
		<RenderShoes>
