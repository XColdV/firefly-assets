<?xml version="1.0" encoding="utf-8"?>
<ItemRenderer>
	<Data>
		<StateMachines>
			<StateMachine name="playerState">
				<States>
					<State name="Idle"/>
					<State name="Move"/>
					<State name="Fall"/>
					<State name="Jump"/>
					<State name="DoubleJump"/>
					<State name="SpiritGuide"/>
				</States>
				<Transitions>
					<Transition from="SpiritGuide|Jump|Fall|Move|DoubleJump" to="Idle" >
						<Condition>
							<IsVariableFloat name="speed.length" operator="Less" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition from="SpiritGuide|Jump|Fall|Idle|DoubleJump" to="Move">
						<Condition type="and">
							<IsWearing operatorType="NotEqual" slot="CHESTITEM">ITEM_ID_HAUNTED</IsWearing>
							<IsAction>WALK</IsAction>
						</Condition>
					</Transition>				
					<Transition from="Move|Jump|Fall|Idle|DoubleJump" to="SpiritGuide">
						<Condition type="and">
							<IsWearing slot="CHESTITEM">ITEM_ID_HAUNTED</IsWearing>
							<IsVariableFloat name="speed.length" operator="Greater" abs="true">0</IsVariableFloat>
							<IsAction operatorType="NotEqual">FALL</IsAction>
						</Condition>
					</Transition>
					<Transition from="SpiritGuide|Fall|Move|Idle" to="Jump">
						<Condition type="and">
							<IsWearing operatorType="NotEqual" slot="CHESTITEM">ITEM_ID_HAUNTED</IsWearing>
							<IsAction>JUMP</IsAction>
						</Condition>
					</Transition>
					<Transition from="Jump|Fall" to="DoubleJump">
						<Condition>
							<IsAction>JUMPDOUBLE</IsAction>
						</Condition>
					</Transition>
					<Transition from="DoubleJump|SpiritGuide|Jump|Idle|Move" to="Fall">
						<Condition type="and">
							<IsVariableFloat name="speed.y" operator="Greater" abs="false">0.01</IsVariableFloat>
							<IsAction>FALL</IsAction>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<Sprite name="sword_sprite" fileName="game/firefly_longhand.rttex" textureSize="64,32" />
		<Sprite name="sword_slash_Sprite" fileName="game/particles10.rttex" textureSize="32" />
		<Sprite name="hit_Sprite" fileName="game/particles9.rttex" textureSize="32" />

		<Animations>
			<SpriteAnimation name="Sword" isLoop="true" playOnState="playerState.Idle|playerState.SpiritGuide|playerState.Move|playerState.SpiritGuide|playerState.Move|playerState.Jump|playerState.Fall|playerState.DoubleJump" sprite="sword_sprite" animTime="500">
				<Frame>5,4</Frame>
				<Frame>6,4</Frame>
				<Frame>7,4</Frame>
				<Frame>8,4</Frame>
				<Frame>9,4</Frame>
				<Frame>10,4</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="sword_slash_frames" autoPlay="false" sprite="sword_slash_Sprite">
				<Frame>0,25</Frame>
				<Frame>1,25</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="sword_hit_frames" autoPlay="false" sprite="hit_Sprite">
				<Frame>15,2</Frame>
				<Frame>16,2</Frame>
				<Frame>17,2</Frame>
				<Frame>18,2</Frame>
			</SpriteAnimation>
		</Animations>
		<ParticleSystems>
			<ParticleSystem name="slash_particle">
				<Emitter>
					<Set name="offset">0,-22</Set>
					<Set name="emissionInterval">0.25</Set>
					<Set name="lifeTime">0.25</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">1</Set>
				</Emitter>
				<Particle alternateSpriteFrameWithPunch="true">
					<Set name="sprite">sword_slash_Sprite</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="lifeTime">0.4</Set>
					<Set name="rotateWithVelocity">true</Set>
					<Set name="interpolateAlpha">false</Set>
					<Set name="initialAlpha">1</Set>
					<Set name="finalAlpha">1</Set>
					<Set name="interpolateVelocity">true</Set>
					<VectorTo name="initialVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
					<VectorTo name="finalVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="hit_particle">
				<Emitter>
					<Set name="offset">0,0</Set>
					<Set name="lifeTime">2</Set>
					<Set name="particlesPerEmission">4</Set>
					<Set name="particlesToEmit">2</Set>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">hit_Sprite</Set>
					<Set name="useGravity">true</Set>
					<Set name="lifeTime">1</Set>
					<Set name="gravityVector">0, 100</Set>
					<Set name="initialRotationRate">15</Set>
					<Set name="finalRotationRate">5</Set>
					<Set name="initialScale">1,1</Set>
					<Random name="finalScale" min="0.2, 0.2" max="0.5, 0.5"/>
					<Set name="interpolateAngle">true</Set>
					<Random name="initialAngle" min="-360" max="360"/>
					<Random name="finalAngle" min="-360" max="360"/>
					<RandomRadial name="initialVelocity" angleRange="30,330" radiusRange="13.5,150"/>
					<Random name="posOffset" min="0, 0" max="16,16"/>
				</Particle>
			</ParticleSystem>
		</ParticleSystems>
		
		<RenderOptions>
			<Default>
				<Set name="HideParticlesOnTransform">false</Set>
				<Set name="IgnoreDefaultDestroyedTileEffect">true</Set>
				<Set name="PunchSoundOverride">HAND</Set>
			</Default>
		</RenderOptions>
		
	</Data>

	<RenderRules>
		<RenderHandItem value="1.23,7.3" >
			<SpriteRender name="sword_sprite"/>
		</RenderHandItem>
		<RenderInFront>
			<ParticleSystemRender name="hit_particle"/>
		</RenderInFront>
		<OnPunchUpdate>
			<AvatarTransform class="Face">
				<Set name="face">MAD</Set>
			</AvatarTransform>
			<AvatarTransform class="ArmAngle">
				<Set name="armName">arm2Angle</Set>
				<Set name="armAngle">1200</Set>
				<Set name="isAdditive">true</Set>
				<Set name="pointTowardsPunchTarget">false</Set>
			</AvatarTransform>
		</OnPunchUpdate>
		<OnPunchStart>
			<ParticleSystemUpdate name="slash_particle"/>
		</OnPunchStart>
		<OnDamagedTile>
			<ParticleSystemUpdate name="hit_particle"/>
		</OnDamagedTile>
		<OnDestroyedTile>
			<ParticleSystemUpdate name="hit_particle"/>
		</OnDestroyedTile>
		<SwitchOffClothingParticles>
			<ParticleSystemOff name="slash_particle"/>
			<ParticleSystemOff name="hit_particle"/>
		</SwitchOffClothingParticles>
	</RenderRules>
</ItemRenderer>