<?xml version="1.0"?>
<ItemRenderer>
	<Data>
		<Sprite name="p_effect" fileName="game/firefly_particles_large.rttex" textureSize="64"/>
		<Sprite name="sam" fileName="game/sam.rttex" textureSize="128,64"/>
        <Sprite name="punch_sam" fileName="game/sam.rttex" textureSize="128,64" frame="2,1"/>
		<Sprite name="flameSprite" fileName="game/particles2.rttex" textureSize="32" frame="1,14"/>
		<Sprite name="fireSprite1" fileName="game/particles_large12.rttex" textureSize="64"/>
		<Sprite name="fireSprite2" fileName="game/particles_large12.rttex" textureSize="64"/>
		<Animations>
			<SpriteAnimation name="fireAnimation1" isLoop="true" autoPlay="false" sprite="fireSprite1" animTime="1600">
				<Frame>0,5</Frame>
				<Frame>1,5</Frame>
				<Frame>2,5</Frame>
				<Frame>3,5</Frame>
				<Frame>4,5</Frame>
				<Frame>5,5</Frame>
				<Frame>6,5</Frame>
				<Frame>7,5</Frame>
				<Frame>8,5</Frame>
				<Frame>9,5</Frame>
				<Frame>10,5</Frame>
				<Frame>11,5</Frame>
				<Frame>12,5</Frame>
				<Frame>13,5</Frame>
				<Frame>14,5</Frame>
				<Frame>15,5</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="fireAnimation2" isLoop="true" autoPlay="false" sprite="fireSprite2" animTime="1600">
				<Frame>10,5</Frame>
				<Frame>11,5</Frame>
				<Frame>12,5</Frame>
				<Frame>13,5</Frame>
				<Frame>14,5</Frame>
				<Frame>15,5</Frame>
				<Frame>0,6</Frame>
				<Frame>1,6</Frame>
				<Frame>2,6</Frame>
				<Frame>3,6</Frame>
				<Frame>0,5</Frame>
				<Frame>1,5</Frame>
				<Frame>2,5</Frame>
				<Frame>3,5</Frame>
				<Frame>4,5</Frame>
				<Frame>5,5</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="sam_idle" isLoop="true" playOnState="Motion.Idle" sprite="sam" animTime="1200">
                <Frame>0,0</Frame>
                <Frame>1,0</Frame>
                <Frame>2,0</Frame>
            </SpriteAnimation>
			<SpriteAnimation name="sam_walk" isLoop="true" playOnState="Motion.Move" sprite="sam" animTime="600">
				<Frame>3,3</Frame>
                <Frame>4,3</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="sam_jump" sprite="sam" playOnState="Motion.Jump">
				<Frame>3,0</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="sam_jump2" sprite="sam" playOnState="Motion.Jump">
				<Frame>0,1</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="sam_fall" sprite="sam" playOnState="Motion.Fall">
				<Frame>1,1</Frame>
			</SpriteAnimation>
            <SpriteAnimation name="sam_punch" autoPlay="true" isLoop="true" playOnState="Action1.Punch" sprite="punch_sam" animTime="600">
                <Frame>2,1</Frame>
                <Frame>3,1</Frame>
                <Frame>4,1</Frame>
                <Frame>0,2</Frame>
                <Frame>1,2</Frame>
                <Frame>2,2</Frame>
                <Frame>3,2</Frame>
                <Frame>4,2</Frame>
                <Frame>0,3</Frame>
                <Frame>1,3</Frame>
                <Frame>2,3</Frame>
            </SpriteAnimation>
			<SpriteAnimation name="punch_continue" sprite="p_effect" animTime="200" isLoop="true" playOnAction="PUNCH">
				<Frame>1,0</Frame>
				<Frame>2,0</Frame>
				<Frame>3,0</Frame>
				<Frame>1,1</Frame>
				<Frame>2,1</Frame>
				<Frame>3,1</Frame>
			</SpriteAnimation>
		</Animations>
		<StateMachines>
			<StateMachine name="Motion">
				<States>
					<State name="Idle" />
					<State name="Move" />
					<State name="Jump" />
					<State name="Fall" />
				</States>
				<Transitions>
					<Transition to="Idle" from="Fall|Move">
						<Condition type="and">
							<IsVariableBool name="onGround">true</IsVariableBool>
							<IsVariableFloat name="speed.length" operator="Less" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="Move" from="Jump|Fall|Idle">
						<Condition type="and">
							<IsVariableBool name="onGround">true</IsVariableBool>
							<IsVariableFloat name="speed.length" operator="Greater" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="Jump" from="Idle|Move">
						<Condition type="and">
							<IsVariableBool name="onGround">false</IsVariableBool>
							<IsVariableFloat name="speed.y" operator="Less">-0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="Fall" from="Jump|Idle|Move">
						<Condition type="and">
							<IsVariableBool name="onGround">false</IsVariableBool>
							<IsVariableFloat name="speed.y" operator="Greater">0.1</IsVariableFloat>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
			<StateMachine name="Action1">
				<States>
					<State name="Idle"/>
					<State name="Punch"/>
					<State name="ZombiePunch"/>
				</States>
				<Transitions>
					<Transition from="ZombiePunch|Punch" to="Idle" >
						<Condition>
							<IsAction operatorType="NotEqual">PUNCH</IsAction>
						</Condition>
					</Transition>
					<Transition from="ZombiePunch|Idle" to="Punch">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>false</IsZombified>
						</Condition>
					</Transition>
					<Transition from="Idle|Punch" to="ZombiePunch">
						<Condition type="and">
							<IsAction>PUNCH</IsAction>
							<IsZombified>true</IsZombified>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<RenderOptions>
			<Default>
				<Set name="UserNameOffset">20</Set>
				<Set name="IgnoreDefaultDamagedTileEffect">true</Set>
				<Set name="IgnoreDefaultDestroyedTileEffect">true</Set>
				<Set name="HasDeathParticles">true</Set>
				<Set name="IgnorePunchTypeCheck">true</Set>
				<Set name="HideAvatarOnDeath">true</Set>
				<Set name="IncludeAllActions">true</Set>
				<Set name="PlayDefaultPunchAudio">false</Set>
				<Set name="PunchSoundOverride">SHIRT</Set>
			</Default>
		</RenderOptions>

		<ParticleSystems>
			<ParticleSystem name="punch_continue_particle">
				<Emitter attachment="targetPos">
					<Set name="offset">0, 0</Set>
					<Set name="lifeTime">0</Set>
					<Set name="infParticles">true</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">1</Set>
					<Set name="delayTimer">0.24</Set>
				</Emitter>
				<Particle>
					<Set name="sprite">p_effect</Set>
					<Set name="offset">0, 0</Set>
					<Set name="inSpecificOrder">true</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="lifeTime">0.4</Set>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="fireParticle1">
				<Emitter>
					<Set name="offset">8,-20</Set>
					<Set name="offsetFacing">false</Set>
					<Set name="randomizeInterval">true</Set>
					<Set name="intervalMin">0.1</Set>
					<Set name="intervalMax">0.1</Set>
					<Set name="infParticles">true</Set>
					<Set name="infLifeTime">true</Set>
					<Set name="particlesPerEmission">1</Set>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">fireSprite1</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="isBackgroundParticle">false</Set>
					<Set name="relativeToEmitter">true</Set>
					<Set name="inSpecificOrder">true</Set>
					<Set name="initalRGB">1,1,1</Set>
					<Set name="flipX">false</Set>
					<Curve name="initialScale">
						<KeyFrame>0, 0.75, 0.75</KeyFrame>
						<KeyFrame>1, 1.5, 1.5</KeyFrame>
					</Curve>
					<Curve name="initialAlpha">
						<KeyFrame>0, 1</KeyFrame>
						<KeyFrame>0.5, 0.9</KeyFrame>
						<KeyFrame>1, 0</KeyFrame>
					</Curve>
					<Random name="lifeTime" min="0.4" max="0.5"/>
					<Random name="initialVelocity" min="0,-35" max="0,-45"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="fireParticle2">
				<Emitter>
					<Set name="offset">-8,-20</Set>
					<Set name="offsetFacing">false</Set>
					<Set name="randomizeInterval">true</Set>
					<Set name="intervalMin">0.1</Set>
					<Set name="intervalMax">0.1</Set>
					<Set name="infParticles">true</Set>
					<Set name="infLifeTime">true</Set>
					<Set name="particlesPerEmission">1</Set>
				</Emitter>
				<Particle randomSpriteFrame="true">
					<Set name="sprite">fireSprite2</Set>
					<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
					<Set name="isBackgroundParticle">false</Set>
					<Set name="relativeToEmitter">true</Set>
					<Set name="inSpecificOrder">true</Set>
					<Set name="initalRGB">1,1,1</Set>
					<Set name="flipX">true</Set>
					<Curve name="initialScale">
						<KeyFrame>0, 0.75, 0.75</KeyFrame>
						<KeyFrame>1, 1.5, 1.5</KeyFrame>
					</Curve>
					<Curve name="initialAlpha">
						<KeyFrame>0, 1</KeyFrame>
						<KeyFrame>0.5, 0.9</KeyFrame>
						<KeyFrame>1, 0</KeyFrame>
					</Curve>
					<Random name="lifeTime" min="0.4" max="0.5"/>
					<Random name="initialVelocity" min="0,-35" max="0,-45"/>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="effect_sp">
				<Emitter>
					<Set name="offset">160, -320</Set>
					<Set name="lifeTime">1</Set>
					<Set name="infParticles">true</Set>
					<Set name="checkParticleNumToEmit">true</Set>
					<Set name="particlesPerEmission">24</Set>
					<Set name="particlesToEmit">1</Set>
				</Emitter>
				<Particle>
					<Set name="sprite">flameSprite</Set>
					<Random name="offset" min="-30, -20" max="30, 20" />
					<Set name="renderAlignment">CENTER</Set>
					<Set name="blendingMode">ADDITIVE</Set>
					<Curve name="initialAlpha">
						<KeyFrame>0, 1</KeyFrame>
						<KeyFrame>0.5, 1</KeyFrame>
						<KeyFrame>1, 0</KeyFrame>
					</Curve>
					<Curve name="initialScale">
						<KeyFrame>0, 2, 2</KeyFrame>
						<KeyFrame>1, 3, 3</KeyFrame>
					</Curve>
					<Set name="lifeTime">1</Set>
					<RandomRadial name="initialVelocity" angleRange="0,360" radiusRange="25,50" />
				</Particle>
			</ParticleSystem>
		</ParticleSystems>
		<TileStampData>
			<Set name="FileName">game/particles11.rttex</Set>
			<Set name="EndFrame">12,15</Set>
			<Set name="FrameCount">4</Set>
		 </TileStampData>
	</Data>
	<RenderRules>
		<AddClothingParticles>
			<ParticleSystemUpdate name="fireParticle1"/>
			<ParticleSystemUpdate name="fireParticle2"/>
		</AddClothingParticles>
		<RenderAura>
			<ParticleSystemRender name="fireParticle1"/>
			<ParticleSystemRender name="fireParticle2"/>
		</RenderAura>
		<OnPunchUpdate>
			<AvatarTransform class="Face">
				<Set name="face">MAD</Set>
			</AvatarTransform>
			<ParticleSystemUpdate name="punch_continue_particle" onAction="PUNCH"/>
		</OnPunchUpdate>
		<Update>
			<ParticleSystemUpdate name="punch_continue_particle" onAction="PUNCH" />
		</Update>
		<OnPunchBegin>
			<ParticleSystemOff name="punch_continue_particle"/>
		</OnPunchBegin>
		<OnPunchStop>
			<ParticleSystemOff name="punch_continue_particle"/>
		</OnPunchStop>
		<RenderInFront>
			<ParticleSystemRender name="punch_continue_particle" onAction="PUNCH"/>
			<SpriteRender name="punch_sam" offset="32,0" alignment="DOWN_CENTER" onState="Action1.Punch"/>
			<StopIf type="and">
				<IsAction>PUNCH</IsAction>
			</StopIf>
			<SpriteRender name="sam" offset="32,0" alignment="DOWN_CENTER"/>
		</RenderInFront>
		<OnRespawned>
			<ParticleSystemUpdate name="effect_sp"/>
		</OnRespawned>
		<OnDamagedTile>
			<ParticleSystemUpdate name="punch_continue_particle" />
		</OnDamagedTile>
		<OnDestroyedTile>
			<ParticleSystemUpdate name="punch_continue_particle"/>
		</OnDestroyedTile>
		<SwitchOffClothingParticles>
			<ParticleSystemOff name="effect_sp"/>
			<ParticleSystemOff name="punch_continue_particle"/>
			<ParticleSystemOff name="fireParticle1"/>
			<ParticleSystemOff name="fireParticle2"/>
		</SwitchOffClothingParticles>
	</RenderRules>
</ItemRenderer>